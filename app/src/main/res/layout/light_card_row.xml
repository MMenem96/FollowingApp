<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnailLights"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_light" />

            <TextView
                android:id="@+id/lightDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/thumbnailLights"
                android:layout_toRightOf="@id/thumbnailLights"
                android:text="@string/dateText_txt"
                android:textColor="@color/secondColor"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/lightValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lightDate"
                android:layout_toEndOf="@id/thumbnailLights"
                android:layout_toRightOf="@id/thumbnailLights"
                android:text="@string/report_value"
                android:textColor="@color/secondColor"
                android:textSize="@dimen/textview_font_size" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>